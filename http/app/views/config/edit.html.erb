<% form_for @item, :url=>config_path(@item), :html=>{:method=>:put} do | form | %>
 <fieldset>
  <legend>Параметры конфигурации</legend>
  <%= @item.name %>
  <%= form.text_field :value %>
  <%= form.submit "Сохранить" %>
 </fieldset>
<% end %>
<%= button_to 'удалить', config_path(@item), :method=>:delete -%>
