<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
 "http://wwww.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
 <head>
  <title><%= @title %></title>
  <%= auto_discovery_link_tag(:rss, :controller=>'Blog', :action => 'rss') %>
  <%= javascript_include_tag "prototype" %>
  <%#= javascript_include_tag "scriptaculous.js?load=effects,controls" %>
  <%#= javascript_include_tag "effects" %> 
  <%#= javascript_include_tag "controls" %>
  <%= stylesheet_link_tag "main" %>
 </head>
 <body>
  <div class="main_menu">
   <%= menu_bar lib_menu %>
  </div>
  <% if @submenu then %>
   <div class="submenu">
    <%= menu_bar @submenu -%>
   </div>
  <% end -%>
  <% if flash && flash.size -%>
   <div class="flash">
    <% if flash[:notice] -%>
     <div class="notice">
      <%= h(flash[:notice]) -%>
     </div>
    <% end -%>
    <% if flash[:error] -%>
     <div class="error">
      <%= h(flash[:error]) -%>
     </div>
    <% end -%>
   </div>
  <% end -%>
  <div class="content">
   <%= yield %>
  </div>
  <div class="footer"></div>
 </body>
</html>
