!!!
%html
 %head
  %title= @title
  = auto_discovery_link_tag(:rss, rss_lib_site_index_url)
  = javascript_include_tag "application"
  = stylesheet_link_tag "application"
  = csrf_meta_tag
 %body
  .main_menu
   -# = menu_bar lib_menu
   = render :partial => "shared/menu"
  .submenu
   -# = menu_bar @submenu
   = yield :submenu
  #flash_place
   - flash.each do |key, value|
    .flash{ :class => key}= value
  .content
   = yield
  .footer
